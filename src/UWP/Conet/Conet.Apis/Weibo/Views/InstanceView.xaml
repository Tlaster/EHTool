<UserControl
    x:Class="Conet.Apis.Weibo.Views.InstanceView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Conet.Apis.Weibo.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:weibo="using:Conet.Apis.Weibo"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    DataContextChanged="InstanceView_OnDataContextChanged"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    d:DataContext="{d:DesignInstance weibo:InstanceData}">

    <Grid>
        <controls:ImageEx IsCacheEnabled="True" x:Name="UserImage" CornerRadius="25" Width="50" Height="50"/>
        <ProgressRing x:Name="ProgressRing" Width="50" Height="50" IsActive="True"/>
    </Grid>
</UserControl>
