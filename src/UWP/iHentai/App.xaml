<Application
    x:Class="iHentai.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:iHentai.Converters">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/_Colors.xaml" />
                <ResourceDictionary Source="/Styles/_FontSizes.xaml" />
                <ResourceDictionary Source="/Styles/_Thickness.xaml" />

                <ResourceDictionary Source="/Styles/TextBlock.xaml" />
                <ResourceDictionary Source="/Styles/Page.xaml" />
                <ResourceDictionary Source="/Styles/ImageEx.xaml" />
                
                <ResourceDictionary Source="EHentai/Generic.xaml"/>
                <ResourceDictionary Source="NHentai/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:HumanizerConverter x:Name="HumanizerConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>