<?xml version="1.0" encoding="UTF-8"?>
<ContentView 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="iHentai.Core.Common.Controls.CollectionView"
    xmlns:local="clr-namespace:iHentai.Core.Common.Controls">
  <ContentView.Content>
        <Grid>
            <local:ExListView HasUnevenRows="True" x:Name="CollectionListView" IsPullToRefreshEnabled="True">
                <ListView.Footer>
                    <Grid Padding="16" x:Name="LoadMoreView" HorizontalOptions="Center" VerticalOptions="Center" IsVisible="False">
                        <ActivityIndicator IsRunning="True"/>
                    </Grid>
                </ListView.Footer>
            </local:ExListView>
            <Grid Padding="16" HorizontalOptions="Center" VerticalOptions="Center" x:Name="RefreshingView" IsVisible="False">
                <ActivityIndicator IsRunning="True"/>
            </Grid>
            <Grid Padding="16" HorizontalOptions="Center" VerticalOptions="Center" x:Name="EmptyView" IsVisible="False">
                <Label Text="Empty"/>
            </Grid>
            <Grid Padding="16" HorizontalOptions="Center" VerticalOptions="Center" x:Name="ErrorView" IsVisible="False">
                <Label Text="Error"/>
            </Grid>
        </Grid>
  </ContentView.Content>
</ContentView>