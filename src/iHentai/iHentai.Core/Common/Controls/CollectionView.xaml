<?xml version="1.0" encoding="UTF-8"?>
<ContentView 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="iHentai.Core.Common.Controls.CollectionView">
  <ContentView.Content>
        <Grid>
            <ListView HasUnevenRows="True" x:Name="CollectionListView" IsPullToRefreshEnabled="True"/>
            <Grid HorizontalOptions="Center" VerticalOptions="Center" x:Name="RefreshingView" IsVisible="False">
                <ActivityIndicator IsRunning="True"/>
            </Grid>
            <Grid Padding="16" HorizontalOptions="Center" VerticalOptions="Center" x:Name="EmptyView" IsVisible="False">
                <Label Text="Empty"/>
            </Grid>
            <Grid Padding="16" HorizontalOptions="Center" VerticalOptions="Center" x:Name="ErrorView" IsVisible="False">
                <Label Text="Error"/>
            </Grid>
        </Grid>
  </ContentView.Content>
</ContentView>